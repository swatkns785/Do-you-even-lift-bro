<h3>Fill out the form to initialize a workout session.</h3>

<%= form_for @workout do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date, use_month_numbers: true %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
